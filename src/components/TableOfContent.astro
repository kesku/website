---
import type { TocItem } from '../util/generate-toc';

interface Props {
	heading: TocItem
}

const { heading } = Astro.props;
---

<li>
  <a href={'#' + heading.slug}>
    {heading.text}
  </a>
  {
    heading.children.length > 0 && (
      <ul>
        {heading.children.map((child) => (
          <Astro.self heading={child} />
        ))}
      </ul>
    )
  }
</li>

<style>
	li {
		margin: 0.5rem 0;
	}

	ul {
		list-style: none;
	}
</style>
